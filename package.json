{
  "name": "deno-live-preview",
  "displayName": "Deno Live Preview",
  "description": "Run Deno TypeScript files with live preview",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheMapleseed/VS-Deno"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:html",
    "onLanguage:css"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "deno-live-preview.start",
        "title": "Start Deno Live Preview"
      },
      {
        "command": "deno-live-preview.stop",
        "title": "Stop Deno Live Preview"
      },
      {
        "command": "deno-live-preview.toggleAutoStart",
        "title": "Toggle Auto-Start Preview"
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "deno-live-preview-container",
          "title": "Deno Live Preview",
          "icon": "$(preview)"
        }
      ]
    },
    "views": {
      "deno-live-preview-container": [
        {
          "type": "webview",
          "id": "deno-live-preview.preview",
          "name": "Preview"
        }
      ]
    },
    "configuration": {
      "title": "Deno Live Preview",
      "properties": {
        "denoLivePreview.port": {
          "type": "number",
          "default": 8000,
          "description": "The port to use for the Deno server"
        },
        "denoLivePreview.autoStart": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start the preview when opening a Deno TypeScript file"
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "deno-live-preview.toggleAutoStart",
          "group": "Deno Live Preview"
        }
      ],
      "view/title": [
        {
          "command": "deno-live-preview.toggleAutoStart",
          "when": "view == deno-live-preview.preview",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "deno-live-preview.start",
          "when": "editorLangId =~ /(typescript|html|css)/",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^16.x.x",
    "@types/vscode": "^1.60.0",
    "@vscode/test-electron": "^2.x.x",
    "@vscode/vsce": "^2.x.x",
    "typescript": "^4.x.x"
  },
  "dependencies": {}
}
